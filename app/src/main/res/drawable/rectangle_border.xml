<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fond de la forme -->
    <item android:drawable="@android:color/transparent" />

    <!-- Bordure -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#000000" /> <!-- Couleur de la bordure (rouge dans cet exemple) -->
            <solid android:color="#FFFFFF" /> <!-- Couleur du fond (blanc dans cet exemple) -->
        </shape>
    </item>
</layer-list>
